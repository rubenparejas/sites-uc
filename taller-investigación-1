<body>
    <div class="container">
        <div class="header">
            <div class="mode-toggle">
                <button class="mode-btn active" onclick="setViewMode()">👁️ Visualización</button>
                <button class="mode-btn" onclick="showPasswordModal()">✏️ Edición</button>
            </div>
            <h1>🎓 Taller de Investigación 1</h1>
            <p>Sistema de Gestión de Materiales y Prácticas</p>
        </div>
        
        <div class="main-content">
            <div class="section-controls edit-mode-only">
                <button class="btn btn-primary" onclick="showAddSectionModal()">
                    ➕ Agregar Nueva Sección
                </button>
                <button class="btn btn-success" onclick="exportData()">
                    💾 Exportar Datos
                </button>
            </div>
            
            <div id="sections-container" class="sections-container">
                <!-- Las secciones se generarán dinámicamente -->
            </div>
        </div>
    </div>

    <!-- Modal para contraseña -->
    <div id="passwordModal" class="modal password-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">🔒 Acceso al Modo Edición</h3>
                <p>Ingrese la contraseña para acceder al modo edición</p>
            </div>
            <input type="password" id="passwordInput" class="password-input" placeholder="Contraseña">
            <div class="modal-actions">
                <button class="btn btn-primary" onclick="checkPassword()">Ingresar</button>
                <button class="btn btn-danger" onclick="closePasswordModal()">Cancelar</button>
            </div>
        </div>
    </div>

    <!-- Modal para agregar sección -->
    <div id="addSectionModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Agregar Nueva Sección</h3>
            </div>
            <div class="form-group">
                <label class="form-label">Nombre de la Sección:</label>
                <input type="text" id="sectionNameInput" class="form-input" placeholder="Ej: Marco Teórico">
            </div>
            <div class="modal-actions">
                <button class="btn btn-primary" onclick="addSection()">Agregar</button>
                <button class="btn btn-danger" onclick="closeModal()">Cancelar</button>
            </div>
        </div>
    </div>

    <script>
        let isEditMode = false;
        const correctPassword = "Campeon#8";

        let courseData = {
            sections: [
                {
                    id: 1,
                    name: "Fundamentos de la Investigación",
                    materials: [
                        {
                            name: "Metodología de la Investigación - Hernández Sampieri",
                            url: "https://ejemplo.com/hernandez-sampieri-metodologia"
                        },
                        {
                            name: "Guía de Investigación Científica",
                            url: "https://ejemplo.com/guia-investigacion-cientifica"
                        }
                    ],
                    practices: [
                        {
                            name: "Práctica 1: Identificación de Problemas de Investigación",
                            url: "https://ejemplo.com/practica-1-problemas"
                        },
                        {
                            name: "Ejercicio: Formulación de Hipótesis",
                            url: "https://ejemplo.com/ejercicio-hipotesis"
                        }
                    ]
                },
                {
                    id: 2,
                    name: "Diseño de Investigación",
                    materials: [
                        {
                            name: "Tipos de Diseño de Investigación",
                            url: "https://ejemplo.com/tipos-diseno-investigacion"
                        }
                    ],
                    practices: [
                        {
                            name: "Práctica 2: Diseño de un Proyecto de Investigación",
                            url: "https://ejemplo.com/practica-diseno-proyecto"
                        }
                    ]
                }
            ]
        };

        function setViewMode() {
            isEditMode = false;
            document.body.className = 'view-mode';
            updateModeButtons();
        }

        function setEditMode() {
            isEditMode = true;
            document.body.className = 'edit-mode';
            updateModeButtons();
        }

        function updateModeButtons() {
            const buttons = document.querySelectorAll('.mode-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            if (isEditMode) {
                buttons[1].classList.add('active');
            } else {
                buttons[0].classList.add('active');
            }
        }

        function showPasswordModal() {
            document.getElementById('passwordModal').style.display = 'block';
            document.getElementById('passwordInput').focus();
        }

        function closePasswordModal() {
            document.getElementById('passwordModal').style.display = 'none';
            document.getElementById('passwordInput').value = '';
        }

        function checkPassword() {
            const password = document.getElementById('passwordInput').value;
            if (password === correctPassword) {
                setEditMode();
                closePasswordModal();
                renderSections();
            } else {
                alert('Contraseña incorrecta');
                document.getElementById('passwordInput').value = '';
                document.getElementById('passwordInput').focus();
            }
        }

        function renderSections() {
            const container = document.getElementById('sections-container');
            container.innerHTML = '';

            if (courseData.sections.length === 0) {
                container.innerHTML = '<div class="empty-state">No hay secciones creadas. ¡Agrega tu primera sección!</div>';
                return;
            }

            courseData.sections.forEach(section => {
                const sectionElement = createSectionElement(section);
                container.appendChild(sectionElement);
            });
        }

        function createSectionElement(section) {
            const sectionDiv = document.createElement('div');
            sectionDiv.className = 'section';
            sectionDiv.innerHTML = `
                <div class="section-header">
                    <h3 class="section-title">${section.name}</h3>
                    <button class="btn btn-danger edit-mode-only" onclick="deleteSection(${section.id})">🗑️ Eliminar</button>
                </div>
                <div class="section-content">
                    <div class="materials-section">
                        <h4 class="subsection-title">Materiales del Curso</h4>
                        <ul class="material-list" id="materials-${section.id}">
                            ${section.materials.map((material, index) => `
                                <li class="material-item">
                                    <div class="material-info">
                                        <div class="material-details">
                                            <div class="material-name">${material.name}</div>
                                            <div class="material-url">${material.url}</div>
                                        </div>
                                        <div class="material-actions">
                                            <a href="${material.url}" target="_blank" class="btn-link">📥 Acceder</a>
                                            <button class="btn btn-danger edit-mode-only" onclick="removeMaterial(${section.id}, 'materials', ${index})">✖</button>
                                        </div>
                                    </div>
                                </li>
                            `).join('')}
                        </ul>
                        <div class="add-material-form edit-mode-only">
                            <div class="form-row">
                                <input type="text" class="material-input" placeholder="Nombre del material" id="material-name-${section.id}">
                                <input type="url" class="material-input" placeholder="https://ejemplo.com/material" id="material-url-${section.id}">
                            </div>
                            <button class="btn btn-success" onclick="addMaterial(${section.id}, 'materials')">➕ Agregar Material</button>
                        </div>
                    </div>
                    <div class="practices-section">
                        <h4 class="subsection-title">Prácticas</h4>
                        <ul class="material-list" id="practices-${section.id}">
                            ${section.practices.map((practice, index) => `
                                <li class="material-item">
                                    <div class="material-info">
                                        <div class="material-details">
                                            <div class="material-name">${practice.name}</div>
                                            <div class="material-url">${practice.url}</div>
                                        </div>
                                        <div class="material-actions">
                                            <a href="${practice.url}" target="_blank" class="btn-link">📥 Acceder</a>
                                            <button class="btn btn-danger edit-mode-only" onclick="removeMaterial(${section.id}, 'practices', ${index})">✖</button>
                                        </div>
                                    </div>
                                </li>
                            `).join('')}
                        </ul>
                        <div class="add-material-form edit-mode-only">
                            <div class="form-row">
                                <input type="text" class="material-input" placeholder="Nombre de la práctica" id="practice-name-${section.id}">
                                <input type="url" class="material-input" placeholder="https://ejemplo.com/practica" id="practice-url-${section.id}">
                            </div>
                            <button class="btn btn-success" onclick="addMaterial(${section.id}, 'practices')">➕ Agregar Práctica</button>
                        </div>
                    </div>
                </div>
            `;
            return sectionDiv;
        }

        function showAddSectionModal() {
            if (!isEditMode) return;
            document.getElementById('addSectionModal').style.display = 'block';
            document.getElementById('sectionNameInput').focus();
        }

        function closeModal() {
            document.getElementById('addSectionModal').style.display = 'none';
            document.getElementById('sectionNameInput').value = '';
        }

        function addSection() {
            const nameInput = document.getElementById('sectionNameInput');
            const name = nameInput.value.trim();
            
            if (!name) {
                alert('Por favor, ingresa un nombre para la sección');
                return;
            }

            const newSection = {
                id: Date.now(),
                name: name,
                materials: [],
                practices: []
            };

            courseData.sections.push(newSection);
            renderSections();
            closeModal();
        }

        function deleteSection(sectionId) {
            if (!isEditMode) return;
            if (confirm('¿Estás seguro de que deseas eliminar esta sección?')) {
                courseData.sections = courseData.sections.filter(section => section.id !== sectionId);
                renderSections();
            }
        }

        function addMaterial(sectionId, type) {
            if (!isEditMode) return;
            
            const nameInput = document.getElementById(`${type === 'materials' ? 'material' : 'practice'}-name-${sectionId}`);
            const urlInput = document.getElementById(`${type === 'materials' ? 'material' : 'practice'}-url-${sectionId}`);
            
            const name = nameInput.value.trim();
            const url = urlInput.value.trim();
            
            if (!name || !url) {
                alert('Por favor, ingresa tanto el nombre como la URL');
                return;
            }

            const section = courseData.sections.find(s => s.id === sectionId);
            if (section) {
                section[type].push({ name, url });
                nameInput.value = '';
                urlInput.value = '';
                renderSections();
            }
        }

        function removeMaterial(sectionId, type, index) {
            if (!isEditMode) return;
            const section = courseData.sections.find(s => s.id === sectionId);
            if (section) {
                section[type].splice(index, 1);
                renderSections();
            }
        }

        function exportData() {
            if (!isEditMode) return;
            const dataStr = JSON.stringify(courseData, null, 2);
            const dataBlob = new Blob([dataStr], {type: 'application/json'});
            const url = URL.createObjectURL(dataBlob);
            const link = document.createElement('a');
            link.href = url;
            link.download = 'taller-investigacion-1.json';
            link.click();
            URL.revokeObjectURL(url);
        }

        // Event listeners
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                closeModal();
                closePasswordModal();
            }
        });

        document.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                if (e.target.id === 'passwordInput') {
                    checkPassword();
                } else if (e.target.id === 'sectionNameInput') {
                    addSection();
                }
            }
        });

        // Cerrar modales al hacer clic fuera
        document.getElementById('addSectionModal').addEventListener('click', function(e) {
            if (e.target === this) closeModal();
        });

        document.getElementById('passwordModal').addEventListener('click', function(e) {
            if (e.target === this) closePasswordModal();
        });

        // Inicializar la aplicación en modo visualización
        setViewMode();
        renderSections();
    </script>
</body>
</html>
