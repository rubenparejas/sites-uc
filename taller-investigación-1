            font-size: 12px;
            border-radius: 6px;
            transition: all 0.3s ease;
        }

        .btn-link:hover {
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(155, 89, 182, 0.3);
            color: white;
            text-decoration: none;
        }

        .sections-container {
            display: grid;
